{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compilar con MSVC v14 (C++14)",
            "command": "cl.exe",
            "args": [
                "/std:c++14",
                "/EHsc",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/Zi",
                "/nologo"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [ "$msCompile" ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea simplificada para Visual Studio C++ v14"
        }
    ]
}
